{
    "compilerOptions": {
      "target": "esnext",
      "module": "CommonJS",
      "moduleResolution": "node",
      "lib": [
        "esnext",
        "DOM"
      ],
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "skipLibCheck": true,
      "importHelpers": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "strictNullChecks": false,
      "resolveJsonModule": true,
      "strictFunctionTypes": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "declaration": false,
      "typeRoots": [
        "./node_modules/@types"
      ]
    },
    "include": [
      "./src/**/*.ts"
    ],
    "exclude": [
      "./node_modules"
    ]
  }